<div class="slide-size">
<div id="slide" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  <% 5.times do |t|%>
    <% if !@articles[t].nil? %>
    <li data-target="#slide" data-slide-to="<%= t %>" class="<%= if !(t > 0) then "active" end %>"></li>
    <% end %>
  <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% 5.times do |t|%>
    <% if !@articles[t].nil? %>
    <div class="item <%= if !(t > 0) then "active" end %>">
      <img class="img-slide" src="<%= @articles[t].portrait.url %>" alt="<%= @articles[t].text %>">
    </div>
    <% end %>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#slide" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#slide" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>