<div class="col-md-7">
<div class="page-header"><h1>Login</h1></div>

<%= form_for @user_session do |f| %>
  <%= render 'shared/errors', object: @user_session %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Login!", class: 'btn btn-primary btn-lg' %>
<% end %>
</div>
<div class="col-md-5">
  <%= render 'layouts/social' %>
</div>