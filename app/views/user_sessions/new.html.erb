<div class="col-md-7">
  <div class="col-md-7">
<div class="page-header"><h1>Login</h1></div>

<%= form_for @user_session do |f| %>
  <%= render 'shared/errors', object: @user_session %>


  <%= f.label :email %>
  <div class="input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
  </div>
  
  <%= f.label :password, "Senha" %>
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :password, class: 'form-control', placeholder: "Senha" %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me, "Lembrar" %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Login!", class: 'btn btn-primary btn-lg' %>
<% end %>
  </div>
</div>
<div class="col-md-5">
  <%= render 'layouts/social' %>
</div>