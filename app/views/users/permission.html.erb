<div align="center"><H4>Utilize o Formulário abaixo para mudar a permissão de algum usuário</H4></div>
<div class='col-md-2 col-xs-2'></div>
<div class='col-md-8 col-xs-8'>
<%= form_for :user do |form| %>
<div class="form-group">
<%= form.label :role, "Permissão:" %>
<%= form.select :role, options_for_select(PERMISSIONS), {include_blank: true} %><br>
<%= form.label :email, "Usuário:" %>
<%= text_field_tag :dummy, nil, disabled: true %>
<%= form.hidden_field :email %>
</div>
<%= form.submit 'Alterar permissão' %><br>
<% @users.each do |u|%>    
<div class="row">
    <div class="col-md-5"><%= u.email.capitalize %></div>
    <div class="col-md-4"><a data-user-email="<%= u.email %>" data-user-role="<%= u.role %>" class="cursor-pointer"> Selecionar </a></div>
</div>
<% end %>
<% end %>
</div>
<div class='col-md-2 col-xs-2'></div>
