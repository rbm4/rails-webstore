<h3>Formulário Para edição de informações</h3>

<%= form_for :user, html: { class: "directUpload", data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } } do |form| %>

<div class="form-group">

<%= form.label :name, "Seu nome:" %>
<%= form.text_field :name, value: @user.name, class: 'form-control' %>
</div>
<div class="form-group">
<%= form.label :email, "Seu email:" %>
<%= form.text_field :email, value: @user.email, class: 'form-control' %>
</div>
<div class="form-group">
<%= form.label :bio, "Sua Bio:" %>
<%= form.text_area :bio, value: @user.bio, class: 'form-control' %>

</div>

<div align="center">
    <% if !@user.photo.nil? %>
    <div class="portrait_mini">Foto: <%= image_tag(@user.photo, class: "img-responsive img-rounded well") %></div>
    <% end %>
</div>

<%= form.label :photo, "Foto" %><br>
<%= form.file_field :photo, accept: 'image/png,image/gif,image/jpeg', class: "btn btn-default" %>
<%= form.hidden_field :portrait_cache, value: @user.photo %>
    
<%= form.submit 'Alterar informações', class: 'btn btn-primary btn-lg' %><br>
<% end %>